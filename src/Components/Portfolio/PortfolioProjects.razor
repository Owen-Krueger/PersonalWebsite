<PortfolioSection IsLoading="IsLoading" Title="Projects">
    <Content>
        @foreach (var project in Projects)
        {
            <div class="flex flex-col gap-2">
                <div>
                    <span class="font-bold">@project.Name</span>
                    @foreach(var language in project.Languages)
                    {
                        <span class="pl-1 font-bold @language.GetColor()">@language.GetFormattedString()</span>
                    }
                </div>
                <div>
                    <span>Link: </span>
                    <a href="@project.Url" target="_blank" class="hover:text-cyan-500">@project.Url</a>
                </div>
                @((MarkupString)Markdown.ToHtml(project.Description))
                <HorizontalBar />
            </div>
        }
    </Content>
</PortfolioSection>

@code {

    /// <summary>
    /// The projects to display.
    /// </summary>
    [Parameter]
    public List<Project> Projects { get; set; } = new();

    /// <summary>
    /// Whether or not to display the loading animation.
    /// </summary>
    [Parameter]
    public bool IsLoading { get; set; }
}