
<div class="block rounded-2xl shadow-xl mx-auto bg-neutral-50 w-11/12 md:w-1/2 p-4 m-4">
    <div class="max-h-96 overflow-y-auto p-4">
        <h1 class="text-2xl font-bold mb-4 text-cyan-500">@Title</h1>
        @Content
    </div>
</div>

@code {

    /// <summary>
    /// The title text at the top of the section.
    /// </summary>
    [Parameter]
    public string Title { get; set; } = string.Empty;

    /// <summary>
    /// The content of the section.
    /// </summary>
    [Parameter]
    public RenderFragment Content { get; set; } = null!;
}