
<div class="block rounded-2xl shadow-xl mx-auto bg-neutral-50 w-11/12 lg:w-1/2 p-4 m-4">
    <div class="max-h-96 overflow-y-auto">
        <h1 class="text-2xl font-bold mb-4 text-cyan-500">@Title</h1>
        @Content
    </div>
</div>

@code {

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public RenderFragment Content { get; set; }
}